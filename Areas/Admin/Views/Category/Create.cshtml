@model ShopThoiTrang.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-danger">Thêm loại sản phẩm</strong>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("Index", "Category")" class="btn btn-sm btn-success">
                    <i class="fas fa-plus"></i> Quay về danh sách
                </a>
                <button style="submit" class="btn btn-sm btn-success">
                    <i class="fas fa-save"></i>Lưu Thêm
                </button>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <div class="row">
            <div class="col-md-9">
                <div class="form-group">
                    <label>Tên loại sản phẩm</label>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Từ khóa SEO</label>
                    @Html.TextAreaFor(model => model.MetaKey, new  { @class = "form-control" } )
                    @Html.ValidationMessageFor(model => model.MetaKey, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Mô tả SEO</label>
                    @Html.TextAreaFor(model => model.Metadesc,  new { @class = "form-control" } )
                    @Html.ValidationMessageFor(model => model.Metadesc, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Chủ đề cha</label>
                    @Html.DropDownListFor(model => model.ParentId,(SelectList)ViewBag.ListCat,"--Chọn cấp cha-" ,new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ParentId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Sắp xếp</label>
                    @Html.DropDownListFor(model => model.Orders, (SelectList)ViewBag.ListCat , new { @class = "form-control" } )
                    @Html.ValidationMessageFor(model => model.Orders, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Mô tả trạng thái</label>
                    @Html.DropDownListFor(model => model.Status, new[] {
                    new  SelectListItem { Text = "Chưa xuất bản", Value = "2" },
                    new  SelectListItem { Text= "Xuất bản", Value="1" } }, new { @class="form-control"})
                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
</div>
}

